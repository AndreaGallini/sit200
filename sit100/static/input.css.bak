/* Tema light personalizzato che sovrascrive quello standard di DaisyUI */
@plugin "daisyui/theme" {
  name: light;
  default: true;
  color-scheme: light;
  
  --color-base-100: #ffffff;
  --color-base-200: #f8f8f8;
  --color-base-300: #eeeeee;
  --color-base-content: #001522;
  --color-primary: #f0b90b;
  --color-primary-content: #09090b;
  --color-secondary: #c99400;
  --color-secondary-content: #f7f8fa;
  --color-accent: #00d3bb;
  --color-accent-content: #084d49;
  --color-neutral: #282831;
  --color-neutral-content: #f7f8fa;
  --color-info: #00bafe;
  --color-info-content: #042e49;
  --color-success: #01c853;
  --color-success-content: #004c39;
  --color-warning: #ef6c00;
  --color-warning-content: #f7f8fa;
  --color-error: #d51c09;
  --color-error-content: #f7f8fa;
  
  --radius-selector: 0.5rem;
  --radius-field: 0.5rem;
  --radius-box: 0.5rem;
  --size-selector: 0.21875rem;
  --size-field: 0.21875rem;
  --border: 1px;
  --depth: 0;
  --noise: 0;
}

/* Tema dark personalizzato che sovrascrive quello standard di DaisyUI */
@plugin "daisyui/theme" {
  name: dark;
  prefersdark: true;
  color-scheme: dark;
  
  --color-base-100: #001522;
  --color-base-200: #001522;
  --color-base-300: #001522;
  --color-base-content: #fafafa;
  --color-primary: #f0b90b;
  --color-primary-content: #09090b;
  --color-secondary: #c99400;
  --color-secondary-content: #fafafa;
  --color-accent: #00d3bb;
  --color-accent-content: #084d49;
  --color-neutral: #001522;
  --color-neutral-content: #e4e4e7;
  --color-info: #00bafe;
  --color-info-content: #042e49;
  --color-success: #01c853;
  --color-success-content: #004c39;
  --color-warning: #ef6c00;
  --color-warning-content: #fafafa;
  --color-error: #d51c09;
  --color-error-content: #fafafa;
  
  --radius-selector: 0.5rem;
  --radius-field: 0.5rem;
  --radius-box: 0.5rem;
  --size-selector: 0.21875rem;
  --size-field: 0.21875rem;
  --border: 1px;
  --depth: 0;
  --noise: 0;
}
@layer base{
