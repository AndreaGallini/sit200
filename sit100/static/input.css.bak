@import 'tailwindcss';
@plugin 'daisyui' {
  themes: light --default, dark --prefersdark;
  base: true;
  styled: true;
  utils: true;
}

@config "../tailwind.config.js";

/*
  The default border color has changed to `currentcolor` in Tailwind CSS v4,
  so we've added these compatibility styles to make sure everything still
  looks the same as it did with Tailwind CSS v3.
*/
@layer base {
  *,
  ::after,
  ::before,
  ::backdrop,
  ::file-selector-button {
    border-color: var(--color-gray-200, currentcolor);
  }
  
  * {
    @apply font-inter;
  }
}

/* Utility semplici - singole propriet√† */
@utility text-base-content {
  color: oklch(var(--color-base-content));
}

/* Componenti complessi */
@layer components {
  .button_next {
    @apply btn btn-primary h-[50px] w-[150px] dark:text-base-content;
  }

  .button_back {
    @apply btn btn-neutral h-[50px] w-[150px] dark:text-base-content;
  }

  .my_checkbox {
    @apply checkbox checkbox-primary mr-2;
  }

  .my_row {
    @apply flex justify-around w-full mt-5 h-[95px] items-center;
  }

  .my_popup {
    @apply bg-base-100 rounded-[25px] absolute z-999 top-[-50px] left-[50%] h-[700px] w-[80%] flex justify-center gap-2 items-center  translate-x-[-50%] drop-shadow-[0_0_72.6px_rgba(239,185,11,0.15)];
  }

  .input_form input {
    @apply input input-primary w-full;
  }

  .btn {
    @apply font-normal;
  }

  .range-values {
    @apply flex justify-between mt-[5px] text-base-content text-[12px];
  }

  /* Tipografia globale dell'applicazione */
  .h1 {
    @apply sm:text-[38px] md:text-[38px] lg:text-[48px] text-base-content;
  }

  .h2 {
    @apply sm:text-[28px] md:text-[28px] lg:text-[30px] text-base-content;
  }

  .h3 {
    @apply sm:text-[22px] md:text-[22px] lg:text-[25px] text-base-content font-bold;
  }

  .h3_light {
    @apply sm:text-[22px] md:text-[22px] lg:text-[25px] text-base-content;
  }

  .h4 {
    @apply sm:text-[18px] md:text-[18px] lg:text-[22px] text-base-content;
  }

  .h5 {
    @apply sm:text-[17px] md:text-[17px] lg:text-[20px] text-base-content;
  }

  .h6 {
    @apply sm:text-[16px] md:text-[16px] lg:text-[16px] text-base-content;
  }

  .p {
    @apply sm:text-[16px] md:text-[16px] lg:text-[16px] text-base-content;
  }

  .footer {
    @apply sm:text-[14px] md:text-[14px] lg:text-[14px] text-base-content;
  }

  /* Layout e background */
  .background_flex_col_between {
    @apply bg-base-100  h-screen flex flex-col justify-between;
  }

  .background_our_main {
    @apply bg-base-100  h-screen;
  }

  .background_our_main_100p {
    @apply bg-base-100  h-full;
  }

  .main {
    @apply h-calc-100-minus-200;
  }

  .full_h_100 {
    @apply h-calc-100-minus-100;
  }

  .icona_visited {
    @apply bg-primary!;
  }

  .icona_disabled {
    @apply bg-[#6B7280]!;
  }

  .password_reset_container {
    @apply sm:max-w-[500px] md:max-w-[900px] mx-auto h-calc-100-minus-100 pt-4;
  }

  .form_inner_password {
    @apply sm:max-w-[500px] md:max-w-[900px] mx-auto;
  }

  .form_inner {
    @apply px-[100px];
  }

  .footer_div {
    /* Footer */
    @apply flex lg:justify-end justify-center md:justify-center items-center pb-[30px] px-[30px] gap-x-3;

    & p {
      @apply px-[10px];
    }
  }

  /* Navigation e icone */
  .icon_bars {
    @apply absolute top-0 pt-[30px] left-0 w-full flex items-center gap-[50px] mx-auto  h-[50px] z-998 justify-center;

    & img {
      @apply h-[20px];
    }
  }

  .icon-container {
    @apply h-[40px] bg-primary rounded-[5px] w-fit flex items-center justify-center;
  }

  .icon_container_close {
    @apply w-[80px];
  }

  .icon_container_open {
    @apply w-[180px]! bg-primary! text-primary-content!  gap-x-3! flex!;
    & a {
      @apply flex items-center  gap-x-2 leading-[24px];
    }
  }

  .main_navbar {
    @apply flex justify-between items-center px-[50px] h-[100px] sticky top-0 z-9999  bg-base-100 border-b border-[#6B7280]/15 dark:bg-gradient-to-b dark:from-[#081B2E] dark:to-[#020E1C];
  }

  /* User profile e contenuti */
  .inner_menu {
    @apply h-[50px] ml-[200px] flex items-center gap-4;
  }

  .inner_content {
    @apply h-calc-100-minus-130 overflow-hidden;
  }

  .inner_content_map {
    @apply h-calc-100-minus-100 overflow-hidden;
  }

  .inner_content_forms {
    @apply overflow-hidden pt-[80px];
  }

  .inner_content_pipeline {
    @apply overflow-hidden flex justify-center;
  }

  .hr_user_sidebar {
    @apply bg-black h-[2px] my-[30px] w-[80%] text-primary;
  }

  .hr_type {
    @apply bg-black h-[2px] mt-[10px] mb-[30px] w-full;
  }

  .user_sidebar_menu {
    @apply flex flex-col md:pl-[30px] sm:pl-0 gap-[20px] h-full;
  }

